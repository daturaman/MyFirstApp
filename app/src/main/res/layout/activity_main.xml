<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Home"
            android:layout_width="249dp"
            android:layout_height="133dp"
            tools:layout_editor_absoluteX="81dp" android:id="@+id/homeBtn" android:textSize="30sp"
            android:textStyle="bold|italic" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/workBtn" android:onClick="sendHomeMsg"/>
    <Button
            android:text="Work"
            android:layout_width="249dp"
            android:layout_height="133dp"
            tools:layout_editor_absoluteX="81dp" android:id="@+id/workBtn" android:textSize="30sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/homeBtn"
            android:onClick="sendAtWorkMsg"/>
</android.support.constraint.ConstraintLayout>